{
    "plugins": ["node"],
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "rules": {
      "node/exports-style": ["error", "module.exports"],
      "node/no-unsupported-features/es-syntax": "off",
      "node/no-unpublished-require" : "off",
      "no-process-exit" : "off"
    },
    "globals": {
      "describe": true,
      "it": true,
      "expect": true,
      "app": true,
      "beforeEach": true,
      "request": true,
      "before": true,
      "supertest": true,
      "afterEach": true,
      "context": true,
      "setupApp": true
    }
  }